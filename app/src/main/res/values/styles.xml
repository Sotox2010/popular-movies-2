<resources>

    <!-- Toolbar styles -->

    <style name="PopularMovies.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.PopularMovies.Toolbar</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ThemeOverlay.PopularMovies.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorSecondary">#f0f</item>
        <item name="colorControlNormal">#f0f</item>
    </style>


    <!-- Material Design text appearances as per Material Design Guidelines -->
    <!-- See: https://material.io/design/typography/the-type-system.html#-->

    <style name="TextAppearance.Headline4" parent="">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Headline5" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Headline6" parent="">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Subtitle1" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Subtitle2" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Body1" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="TextAppearance.Body2" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:lineSpacingMultiplier">1.3</item>

    </style>

    <style name="TextAppearance.Overline" parent="">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>


</resources>
